                            </Grid>

                            <materialDesign:Card>
                                <Grid HorizontalAlignment="Stretch">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="70*" />

                                        <RowDefinition Height="326*" />

                                    </Grid.RowDefinitions>

                                    <Grid>
                                        <Viewbox HorizontalAlignment="Left">

                                            <StackPanel Orientation="Horizontal">
                                                <TextBox
                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Center"
                                                    Margin=" 10 "
                                                    materialDesign:HintAssist.Hint="Search....................................."
                                                    materialDesign:HintAssist.Foreground="Green"
                                                    materialDesign:TextFieldAssist.UnderlineBrush="Green"
                                                    Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                                                <Button
                                                    Command="{Binding Search}"
                                                    Style="{StaticResource MaterialDesignToolButton}">
                                                    <materialDesign:PackIcon
                                                        Margin="8,0,8,0"
                                                        Kind="Search"
                                                        Opacity=".56" />
                                                </Button>


                                            </StackPanel>


                                        </Viewbox>


                                    </Grid>
                                    <Grid Grid.Row="2">


                                        <!--<ScrollViewer HorizontalAlignment="Stretch"
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      VerticalScrollBarVisibility="Auto" Grid.Row="1">
                                            <TreeView>
                                                <TreeViewItem />
                                            </TreeView>
                                        </ScrollViewer>-->
                                    </Grid>


                                </Grid>
                            </materialDesign:Card>
                        </Grid>
                    </materialDesign:Card>
                </TabItem>
                <TabItem>
                    <TabItem.Header>
                        <StackPanel
                            Width="auto"
                            Height="auto">
                            <materialDesign:PackIcon
                                Width="40"
                                Height="40"
                                HorizontalAlignment="Center"
                                Kind="PlusCircle" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                Text="Add Snake" />
                        </StackPanel>
                    </TabItem.Header>
                    <materialDesign:Card>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <materialDesign:Card Grid.Column="0" Margin="4">
                                <materialDesign:Flipper
                                    Padding="10"
                                    materialDesign:ElevationAssist.Elevation="Dp0"
                                    Style="{StaticResource MaterialDesignCardFlipper}">
                                    <materialDesign:Flipper.FrontContent>
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="1*" />
                                                <RowDefinition
                                                    Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Viewbox>
                                                <StackPanel>
                                                    <TextBlock HorizontalAlignment="Center" FontSize="20">
                                                        Snake
                                                    </TextBlock>
                                                    <materialDesign:ColorZone
                                                        CornerRadius="15"
                                                        VerticalAlignment="Stretch"
                                                        HorizontalAlignment="Stretch"
                                                        Mode="PrimaryLight">
                                                        <materialDesign:PackIcon
                                                            Margin="4"
                                                            MinWidth="128"
                                                            MinHeight="128"
                                                            HorizontalAlignment="Stretch"
                                                            VerticalAlignment="Stretch"
                                                            Kind="Snake" />
                                                    </materialDesign:ColorZone>

                                                </StackPanel>


                                            </Viewbox>
                                            <Viewbox Grid.Row="1">
                                                <Button

                                                    HorizontalAlignment="Stretch"
                                                    VerticalAlignment="Stretch"
                                                    Margin="0,4,0,0"
                                                    Style="{StaticResource MaterialDesignFloatingActionLightButton}"
                                                    ToolTip="MaterialDesignFloatingActionLightButton">
                                                    <materialDesign:PackIcon
                                                        HorizontalAlignment="Stretch"
                                                        VerticalAlignment="Stretch"
                                                        Width="50"
                                                        Height="50"
                                                        Kind="PlusCircle" />
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="Click">
                                                            <i:InvokeCommandAction Command="{x:Static materialDesign:Flipper.FlipCommand}" />
                                                            <i:InvokeCommandAction Command="{Binding SetDefaultPropertiesSnake}" />
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                </Button>
                                            </Viewbox>


                                        </Grid>
                                    </materialDesign:Flipper.FrontContent>
                                    <materialDesign:Flipper.BackContent>
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="Auto" />
                                                <RowDefinition
                                                    Height="*" />
                                            </Grid.RowDefinitions>
                                            <materialDesign:ColorZone
                                                Padding="6"
                                                Mode="SecondaryMid">
                                                <StackPanel
                                                    Orientation="Horizontal">
                                                    <Button
                                                        HorizontalAlignment="Left"
                                                        Command="{x:Static materialDesign:Flipper.FlipCommand}"
                                                        Style="{StaticResource MaterialDesignToolForegroundButton}">
                                                        <materialDesign:PackIcon
                                                            HorizontalAlignment="Right"
                                                            Kind="ArrowLeft" />
                                                    </Button>
                                                    <TextBlock
                                                        Margin="8,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Text="ADD SNAKE" />
                                                </StackPanel>
                                            </materialDesign:ColorZone>
                                            <Grid
                                                Grid.Row="1"

                                                Margin="0,6,0,0"
                                                HorizontalAlignment="Stretch"
                                                VerticalAlignment="Top">
                                                <ScrollViewer HorizontalAlignment="Stretch"
                                                              HorizontalScrollBarVisibility="Disabled"
                                                              VerticalScrollBarVisibility="Auto" Grid.Row="1">
                                                    <Grid>


                                                        <Grid.RowDefinitions>
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />
                                                            <RowDefinition />

                                                        </Grid.RowDefinitions>
                                                        <Viewbox Grid.Row="0">
                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto"/>

                                                                    <RowDefinition Height="*"/>
                                                                </Grid.RowDefinitions>
                                                                <Image Grid.Row="0" Width="50" Height="50" Source="{Binding SnakeForCreate.ImagePath}"/>
                                                                <Button Grid.Row="1"  HorizontalAlignment="Center" Command="{Binding OpenImage}"  Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}" >
                                                                    <materialDesign:PackIcon
                                                                        Width="15"
                                                                        Height="15"
                                                                        Kind="Image" />

                                                                </Button>
                                                            </Grid>
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="1" Margin="5,0,5,0">
                                                            <TextBox
                                                                Width="100"
                                                                Margin="0"
                                                                Padding="2"
                                                                materialDesign:HintAssist.Hint="Name"
                                                                materialDesign:HintAssist.IsFloating="True"
                                                                Text="{Binding SnakeForCreate.Name}"/>

                                                        </Viewbox>

                                                        <Viewbox Grid.Row="2" Margin="5,0,5,0">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Center">
                                                                <Label Padding="0,15,14,0">Lenght:</Label>
                                                                <TextBox
                                                                    Margin="0,0,10,0"
                                                                    materialDesign:HintAssist.Hint="Min"
                                                                    materialDesign:HintAssist.IsFloating="True"
                                                                    Text="{Binding SnakeForCreate.MinLenght}"/>
                                                                <TextBox
                                                                    Margin="0,0,10,0"
                                                                    materialDesign:HintAssist.Hint="Max"
                                                                    materialDesign:HintAssist.IsFloating="True"
                                                                    Text="{Binding SnakeForCreate.MaxLenght}"/>

                                                            </StackPanel>


                                                        </Viewbox>
                                                        <Viewbox Grid.Row="3" Margin="5,0,5,0">
                                                            <StackPanel Orientation="Horizontal"
                                                                        HorizontalAlignment="Center">
                                                                <TextBlock TextWrapping="Wrap" Padding="0,15,14,0"
                                                                           FontSize="8">
                                                                    Amount <LineBreak /> of poison:
                                                                </TextBlock>
                                                                <TextBox
                                                                    Margin="0,0,10,0"
                                                                    materialDesign:HintAssist.Hint="Min"
                                                                    materialDesign:HintAssist.IsFloating="True"
                                                                    Text="{Binding SnakeForCreate.MinAmountOfPoison}"/>
                                                                <TextBox
                                                                    Margin="0,0,10,0"
                                                                    materialDesign:HintAssist.Hint="Max"
                                                                    materialDesign:HintAssist.IsFloating="True" 
                                                                    Text="{Binding SnakeForCreate.MaxAmountOfPoison}"/>

                                                            </StackPanel>


                                                        </Viewbox>
                                                        <Viewbox Grid.Row="4" Margin="5">

                                                            <xctk:CheckComboBox
                                                                x:Name="AreasBox"
                                                                ItemSelectionChanged="AreasBox_OnItemSelectionChanged"

                                                                materialDesign:HintAssist.Hint="Areas"
                                                                materialDesign:HintAssist.IsFloating="True"
                                                                ItemsSource="{Binding Areas}"
                                                               Width="100" />

                                                        </Viewbox>
                                                        <Viewbox Grid.Row="5" Margin="5">
                                                            <xctk:CheckComboBox
                                                                x:Name="ColorsBox"
                                                                ItemSelectionChanged="ColorsBox_OnItemSelectionChanged"
                                                                materialDesign:HintAssist.Hint="Colors"
                                                                materialDesign:HintAssist.IsFloating="True"
                                                                ItemsSource="{Binding Colors}" 
                                                                Width="100">
                                                                <xctk:CheckComboBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBlock Text="{Binding Name}" />
                                                                            <Ellipse Margin="3,0,3,0" Width="15"
                                                                                Fill="{Binding Color}" />
                                                                        </StackPanel>
                                                                    </DataTemplate>
                                                                </xctk:CheckComboBox.ItemTemplate>
                                                            </xctk:CheckComboBox>

                                                        </Viewbox>
                                                        <Viewbox Grid.Row="6" Margin="5,0,5,0">
                                                            <ComboBox Margin="0" Padding="0" materialDesign:HintAssist.Hint="Family"
                                                                materialDesign:HintAssist.IsFloating="True"
                                                                FontSize="15" Width="100" Height="50"
                                                                ItemsSource="{Binding Familyes}"
                                                                SelectedItem="{Binding SnakeForCreate.Family}"/>
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="7" Margin="5,0,5,0">
                                                            <ComboBox Margin="0" Padding="0" materialDesign:HintAssist.Hint="Poison Type"
                                                                      materialDesign:HintAssist.IsFloating="True"
                                                                      FontSize="15" Width="100" Height="50"
                                                                      ItemsSource="{Binding PoisonTypes}" 
                                                                      SelectedItem="{Binding SnakeForCreate.PoisonType}"/>
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="8" Margin="5,0,5,0">
                                                            <ComboBox Margin="0" Padding="0" materialDesign:HintAssist.Hint="Design"
                                                                      materialDesign:HintAssist.IsFloating="True"
                                                                      FontSize="15" Width="100" Height="50"
                                                                      ItemsSource="{Binding Designs}"
                                                                      SelectedItem="{Binding SnakeForCreate.Design}"/>
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="9" Margin ="5">
                                                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                                                <TextBlock>Dangerous Score</TextBlock>
                                                                <materialDesign:RatingBar
                                                                    materialDesign:HintAssist.Hint="Dangerous Score"
                                                                    materialDesign:HintAssist.IsFloating="True"
                                                                    IsPreviewValueEnabled="True"
                                                                    Max="5"
                                                                    Min="0"
                                                                    ValueIncrements="0.25"
                                                                    
                                                                    Value="{Binding SnakeForCreate.DangerausScore}" />

                                                            </StackPanel>
                                                            
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="10">
                                                           <StackPanel Orientation="Horizontal">
                                                               <TextBlock Margin="0,5,0,5" Text="Ai Folder"/>
                                                                <ToggleButton Style="{StaticResource MaterialDesignActionLightToggleButton}"
                                                                              ToolTip="MaterialDesignActionLightToggleButton"
                                                                              Content="{materialDesign:PackIcon Kind=Creation}"/>
                                                           </StackPanel>
                                                        </Viewbox>
                                                        <Viewbox Grid.Row="11" Margin="10">
                                                            <Button 
                                                                HorizontalAlignment="Left"
                                                                Content="ADD">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="Click">
                                                                    <i:InvokeCommandAction Command="{x:Static materialDesign:Flipper.FlipCommand}" />
                                                                    <i:InvokeCommandAction  Command="{Binding AddSnakeCommand}" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                            </Button>
                                                        </Viewbox>


                                                    </Grid>
                                                </ScrollViewer>

                                            </Grid>
                                        </Grid>
                                    </materialDesign:Flipper.BackContent>
                                </materialDesign:Flipper>
                            </materialDesign:Card>
                            <materialDesign:Card Grid.Column="1" Margin="4">
                                <materialDesign:Flipper
                                    Padding="10"
                                    materialDesign:ElevationAssist.Elevation="Dp0"
                                    Style="{StaticResource MaterialDesignCardFlipper}">
                                    <materialDesign:Flipper.FrontContent>
                                        <Grid>

                                            <Grid.RowDefinitions>
                                                <RowDefinition
                                                    Height="1*" />
                                                <RowDefinition
                                                    Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Viewbox>

                                                <StackPanel>
                                                    <TextBlock Margin="5" HorizontalAlignment="Center" FontSize="20">
                                                        Posion
                                                    </TextBlock>
                                                    <materialDesign:ColorZone
                                                        CornerRadius="15"
                                                        VerticalAlignment="Stretch"
                                                        HorizontalAlignment="Stretch"
                                                        Mode="PrimaryLight">
                                                        <materialDesign:PackIcon
